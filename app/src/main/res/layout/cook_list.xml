<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_order_linearlayout"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_width="130dp"
    android:layout_height="130dp">


    <ImageView
        android:gravity="center"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:id="@+id/cook_list_img"
        android:src="@mipmap/cook_img"
        android:layout_width="110dp"
        android:layout_height="110dp" />
    <TextView
        android:id="@+id/cook_textView_name"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="西红柿炒鸡蛋"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cook_textView_price"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:paddingTop="50dp"
        android:textSize="15sp"
        android:text="20元/份"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cook_textView_select_count"
        android:text="1"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_gravity="right"
        android:background="@drawable/bg_cook_list_textview_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>