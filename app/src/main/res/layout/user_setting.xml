<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f0eded"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头部导航-->
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:background="#3c3939"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/userSetting_imageButton_back"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:background="@mipmap/back_white"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/userSetting_textView_back"
            android:text="返回"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:textSize="22sp"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:text="商户信息管理"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/userSetting_textView_finish"
            android:text="完成"
            android:textColor="#fff"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingRight="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:layout_marginTop="30dp"
        android:background="#9a9595"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:text="用户名"
            android:paddingLeft="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/userSetting_TextView_name"
            android:textColor="#1c1c1c"
            android:maxLines="1"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:background="#9a9595"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:text="手机号"
            android:paddingLeft="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/userSetting_editText_phone"
            android:textColor="#1c1c1c"
            android:inputType="phone"
            android:maxLines="1"
            android:gravity="left"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:background="#9a9595"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:text="店铺名称"
            android:paddingLeft="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <EditText
            android:textColor="#1c1c1c"
            android:maxLines="1"
            android:gravity="left"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/userSetting_editText_storeName" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:background="#9a9595"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:text="省份"
            android:paddingLeft="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/userSetting_editText_province"
            android:textColor="#1c1c1c"
            android:maxLines="1"
            android:gravity="left"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:background="#9a9595"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:text="城市"
            android:paddingLeft="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView6" />

        <EditText
            android:textColor="#1c1c1c"
            android:maxLines="1"
            android:gravity="left"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/userSetting_editText_city" />
    </LinearLayout>
</LinearLayout>